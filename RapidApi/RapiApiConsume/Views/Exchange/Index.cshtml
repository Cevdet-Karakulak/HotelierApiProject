@model List<RapidApiConsume.Models.ExchangeViewModel.ExchangeRate>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <h3>Döviz Kurları</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Para Birimi</th>
                <th>Alış Kuru</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.currency</td>
                    <td>@item.exchange_rate_buy</td>
                </tr>
            }
        </tbody>
    </table>
</div>
