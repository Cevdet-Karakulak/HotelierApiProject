@model HotelProject.WebUI.Dtos.RoomDto.CreateRoomDto

@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>Oda Ekle</h2>

<form method="post">
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />

    <label>Oda Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Fiyat</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />

    <label>Yatak Odası Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />

    <label>Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />

    <label>Oda Kapak Fotoğrafı</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <br />

    <label>Wifi</label>
    <input type="text" asp-for="Wifi" class="form-control" />
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />

    <button type="submit" class="btn btn-primary">Odayı Ekle</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
